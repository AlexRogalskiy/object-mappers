<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://dozermapper.github.io/schema/bean-mapping"
          xsi:schemaLocation="http://dozermapper.github.io/schema/bean-mapping http://dozermapper.github.io/schema/bean-mapping.xsd">
    <mapping wildcard="false" type="one-way">
        <class-a>io.nullables.api.playground.objectmappers.commons.model.dto.AddressDto</class-a>
        <class-b map-null="false" map-empty-string="false">io.nullables.api.playground.objectmappers.commons.model.entity.AddressEntity</class-b>

        <field custom-converter="io.nullables.api.playground.objectmappers.dozer.converter.StringToUuidConvertor">
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>city</a>
            <b>city</b>
        </field>
        <field>
            <a>country</a>
            <b>country</b>
        </field>
        <field>
            <a>stateOrProvince</a>
            <b>stateOrProvince</b>
        </field>
        <field>
            <a>postalCode</a>
            <b>postalCode</b>
        </field>
        <field>
            <a>street</a>
            <b>street</b>
        </field>
    </mapping>
</mappings>
